<UserControl x:Class="SIP_Agent.SystemStandby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"  Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="tasksViewSource" />
    </UserControl.Resources>
    <Grid Height="600" DataContext="{StaticResource tasksViewSource}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200*" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="200*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="161*" />
            <ColumnDefinition Width="360*" />
            <ColumnDefinition Width="178*" />
        </Grid.ColumnDefinitions>
        <TextBox Height="35" HorizontalAlignment="Left" Margin="153,187,0,0" Name="userBox" VerticalAlignment="Top" Width="290" TextChanged="userBox_TextChanged" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <Button Content="Registreeri kõne" Height="35" HorizontalAlignment="Left" Margin="182,107,0,0" Name="btn_login" VerticalAlignment="Top" Width="100" Click="btn_login_Click" IsDefault="True" Grid.Column="2" Grid.Row="1" />
        <Label Content="Nimi (autocomplete):" Grid.Column="1" Height="28" HorizontalAlignment="Left" Margin="153,153,0,0" Name="label1" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        <Label Content="Telefoninumber (autocomplete)" Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="153,28,0,0" Name="label2" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        <TextBox Grid.Column="1" Height="35" HorizontalAlignment="Left" Margin="153,62,0,0" Name="textBox1" VerticalAlignment="Top" Width="290" Grid.Row="1" Grid.ColumnSpan="2" />
        <TextBlock Grid.Column="1" Height="48" HorizontalAlignment="Left" Margin="153,99,0,0" Name="textBlock1" Text="Standby režiim: kirjuta helistaja nimi või telefoninumber kõne info sisestamiseks." VerticalAlignment="Top" TextWrapping="Wrap" Width="236" Grid.ColumnSpan="2" />
        <TextBlock Grid.Column="2" Grid.Row="1" Height="100" HorizontalAlignment="Left" Margin="0,162,0,0" Name="textBlock2" Text="Selgitus: Autocomplete abil tuvastatakse isik. Kui dropdown-st valitakse keegi, liigutakse automaatselt järgmisele ekraanile. Kui autocomplete saab 0 vastet ja vajutatakse Registreeri kõne, liigutakse ikka järgmisele ekraanile, aga selle nime/numbriga isik loodakse baasi ja seostatakse tagataustal." VerticalAlignment="Top" TextWrapping="Wrap" Grid.RowSpan="2" Width="360" />
        <Menu Height="21" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="700" Grid.ColumnSpan="4" DataContext="{Binding}">
            <MenuItem Header="File">
                <MenuItem Command="ApplicationCommands.Close" Header="Quit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="Help_About_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
